[core]
  editor = nvim
[ghq]
  root = ~/.ghq
[user]
  name = Koji Sakamoto
  email = kowwwwji@gmail.com
[alias]
# 基本コマンド
  st = status
  cm = commit
  co = checkout
  b = branch 
  cb = checkout -b
  bv = branch -vv
  see = browse
  st = status
  ls = log --stat
# 複合コマンド
  delete-merged-branches = !git branch --merged | grep -vE '^\\*|master$|develop$' | xargs -I % git branch -d %
  graph = log --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --all --date=short

# WIPブランチを作成してPRを作成する 
  start = !"f() { if [ $# -ne 1 ]; then echo 'set branch-name!'; exit 1; fi; git checkout -b $1; git commit --allow-empty -m \\"[WIP]$1"\\ ; git push -u origin $1; hub pull-request --draft; }; f"
# 作業終了後、作成したPRを表示する
  # hub browse して画面上でPRをクリックする。
# Merge後、ローカルとリモートブランチをあわせる
  refresh = !"f() { git checkout master; git pull -p origin master; git delete-merged-branches; git branch -avv; }; f"

[merge]
  ff = false
[pull]
  ff = only
[color]
  ui = true
