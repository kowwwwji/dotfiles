{{- $name := promptStringOnce . "name" "Full Name" -}}
{{- $email := promptStringOnce . "email" "Email" -}}
{{- $signingKey := promptStringOnce . "signingKey" "GPG Signing Key (optional)" -}}

[data]
  name = {{ $name | quote }}
  email = {{ $email | quote }}
  signingKey = {{ $signingKey | quote }}

[encryption]
  command = "age"
  args = ["-d", "--identity", "{{ .chezmoi.homeDir }}/.config/age/chezmoi-key.txt"]
